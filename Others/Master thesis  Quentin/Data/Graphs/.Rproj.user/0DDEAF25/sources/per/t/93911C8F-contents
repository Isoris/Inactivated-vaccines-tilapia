point_plot+theme_qwen()
#### Create base plots ####
## scatter plot
point_plot <-
  ggplot(iris, aes(x=jitter(Sepal.Width),
                   y=jitter(Sepal.Length),
                   col=Species)) +
  geom_point() +
  labs(x="Sepal Width (cm)",
       y="Sepal Length (cm)",
       col="Species",
       title="Iris Dataset - Scatter plot",
       subtitle = "A common subtitle",
       caption = "a caption??")+scale_color_manual(values = colorsQwen)


colorsYBG <- c("#FFC300", "#006837", "#1D91C0" )
